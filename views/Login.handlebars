
    <h1>Skate Park</h1>

    <div class="py-5">
      <h2>Iniciar Sesión</h2>
      <hr class="w-50" />

      <form>
        <div class="form-group">
          <div class="form-group">
            <label>Email</label>
            <input class="form-control w-50 m-auto" />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input class="form-control w-50 m-auto" />
          </div>
        </div>
        <button class="btn btn-success mb-3">Ingresar</button>
        <p>¿Aún no tienes cuenta? <a href="/Registro">Regístrate</a></p>
      </form>
    </div>


    <script>
$("form").submit(async(e)=>{
  e.preventDefault()
  const [email,password] = [...document.querySelectorAll("input")].map((i)=>i.value)
  let user = {email,password}
  
try{
  const {data:token} = await axios.post("/verify",user)
  window.location =`/Datos/${token}`

}catch({response}){
  const {data} = response
  const {error} = data
  alert(error)

}
}


)
    </script>

